<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="mainContainer" stylesheets="@./styles/PauseMenuStyle.css"
      xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="uq.deco2800.coaster.graphics.screens.controllers.PauseMenuController">
    <children>
        <Label text="PAUSED"></Label>
        <Button mnemonicParsing="false" onAction="#onResumeButtonClick" text="RESUME"/>
        <Button mnemonicParsing="false" onAction="#onTutorialButtonClick" text="HOW TO PLAY" />
        <Button mnemonicParsing="false" onAction="#onSaveButtonClick" text="SAVE"/>
        <Button mnemonicParsing="false" onAction="#onLoadButtonClick" text="LOAD"/>
        <Button mnemonicParsing="false" onAction="#onAchievementsButtonClick" text="ACHIEVEMENTS"/>
        <Button mnemonicParsing="false" onAction="#onOptionsButtonClick" text="OPTIONS"/>
        <Button mnemonicParsing="false" onAction="#onQuitButtonClick" text="QUIT"/>
    </children>
</VBox>
