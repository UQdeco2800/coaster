<AnchorPane fx:id="startContainer" styleClass="solidPane" stylesheets="@./styles/GenericStyle.css"
            xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uq.deco2800.coaster.graphics.screens.controllers.AboutScreenController">
<StackPane fx:id="helpScreen" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
           AnchorPane.topAnchor="0.0">
    <children>
        <Pane id="background" prefHeight="200.0" prefWidth="200.0" />
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>

                <Pane prefHeight="200.0" prefWidth="200.0" />
                <Pane prefHeight="200.0" prefWidth="300.0">
                    <children>
                        <Button id="backButton" fx:id="backButton" layoutX="14.0" layoutY="14.0" maxWidth="100.0"
                                mnemonicParsing="false" onAction="#onBackButton" prefHeight="20.0" prefWidth="100.0"
                                text="BACK" textAlignment="CENTER">
                        </Button>
                    </children>
                </Pane>
                <VBox prefHeight="319.0" prefWidth="900.0">
                    <children>
                        <Label id="aboutTitle" fx:id="aboutTitle" alignment="CENTER" maxWidth="900.0" prefHeight="39.0"
                               prefWidth="900.0" text="ABOUT" textAlignment="CENTER">
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0" />
                            </VBox.margin>
                        </Label>
                        <ScrollPane id="blurbScroll" fx:id="blurbScroll" hbarPolicy="NEVER" prefHeight="400.0"
                                    prefWidth="200.0">
                            <content>

                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="200.0"
                                            maxWidth="600">
                                    <children>
                                        <Label id="blurb" fx:id="blurb" alignment="TOP_CENTER" contentDisplay="CENTER"
                                               layoutX="100.0" layoutY="20.0" prefHeight="800.0"
                                               prefWidth="600" text="Coaster is a 2D adventure game with shooter elements.
                                                &#10;IT IS NOT A ROLLERCOASTER GAME.
                                                &#10;&#10;Sci fi meets medieval as you travel through a randomly generated world, encountering exotic biomes, unique weapons, and many, many ducks.
                                                &#10;&#10;Earn a high score and compete against your friends on the leaderboard, or go solo and explore the world of Coaster.
                                                &#10;&#10;Up for a challenge? Try insane mode, its sure to ruffle a few feathers.
                                                &#10;&#10;Whether you want to explore a vast landscape, you're looking for a challenge, or you just like to shoot ducks, you'll love Coaster.
                                                &#10;&#10;&#10;&#10;Coaster - DECO2800 Prac Group I04" wrapText="true" />
                                    </children>
                                </AnchorPane>
                            </content>
                            <VBox.margin>
                                <Insets bottom="10.0" top="20.0" />
                            </VBox.margin>
                        </ScrollPane>
                    </children>
                    <HBox.margin>
                        <Insets top="60.0" />
                    </HBox.margin>
                </VBox>
                <Pane prefHeight="200.0" prefWidth="300.0" />
            </children>
        </HBox>
    </children>
